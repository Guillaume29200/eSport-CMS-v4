{
  "name": "PremiumManager",
  "version": "1.0.0",
  "description": "Système de gestion premium avec paiements - Contrôle d'accès payant pour articles, pages et modules",
  "author": "Guillaume - eSport-CMS",
  "class": "PremiumManager\\PremiumManager",
  "requires": {
    "cms_version": ">=4.0.0",
    "php_version": ">=8.4.0",
    "modules": []
  },
  "permissions": [
    "premium.manage",
    "premium.view_stats",
    "premium.manage_plans",
    "premium.manage_transactions",
    "premium.manage_coupons"
  ],
  "hooks": [
    "admin.menu",
    "admin.dashboard.widgets",
    "content.before_display",
    "user.profile.tabs"
  ],
  "settings": {
    "default_currency": "EUR",
    "trial_enabled": true,
    "trial_days": 14,
    "payment_providers": ["stripe", "paypal"],
    "auto_invoice": true,
    "webhook_secret": ""
  },
  "dependencies": {
    "stripe/stripe-php": "^10.0",
    "paypal/rest-api-sdk-php": "^1.14"
  }
}
